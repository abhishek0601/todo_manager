<main class="TodoPageMain">
  <article>
    <h1 class="TodoPage-Title">My Todo-list</h1>
    <div class="TodoSectionTitle">
      <input class="TodoSection-text" type="text" placeholder="What's next?">
      <input class="TodoSection-date" type="date">
      <input class="TodoSection-button" type="button" value="Add">
    </div>

    <%= render partial: "todo-section", locals: {
      section_title:"Overdue",
      todos: Todo.overdue,
      show_due_date: true
      }  %>
    <%= render partial: "todo-section",locals:{
      section_title: "Due Today",
      todos: Todo.due_today,
      show_due_date: false
    } %>
    <%= render partial: "todo-section", locals:{
      section_title: "Due Later",
      todos: Todo.due_later,
      show_due_date: true
    } %>

  </article>
  </main>
