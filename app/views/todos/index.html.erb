<main class="TodoPageMain">
  <article>
    <h1 class="TodoPage-Title">My Todo-list</h1>
    <%=form_with(url: "/todos", method: "post", class: "TodoSectionTitle") do %>
      <input class="TodoSection-text" name="todo_text" type="text" placeholder="What's next?">
      <input class="TodoSection-date" name="due_date" type="date">
      <input class="TodoSection-button" type="submit" value="Add">
    <% end %>

    <%= render partial: "todo-section", locals: {
      section_title:"Overdue",
      todos: Todo.overdue,
      show_due_date: true
      }  %>
    <%= render partial: "todo-section",locals:{
      section_title: "Due Today",
      todos: Todo.due_today,
      show_due_date: false
    } %>
    <%= render partial: "todo-section", locals:{
      section_title: "Due Later",
      todos: Todo.due_later,
      show_due_date: true
    } %>

  </article>
  </main>
